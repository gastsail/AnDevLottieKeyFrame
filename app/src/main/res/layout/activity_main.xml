<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              tools:context="com.example.gaston.andevlottiekeyframe.MainActivity">

    <ImageView
        android:id="@+id/iv_andevcba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/andev"/>

    <Button
        android:id="@+id/btnDemoLottie"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/demo_lottie"/>

    <Button
        android:id="@+id/btnDemoLottie2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/demo_lottie_2"/>

    <Button
        android:id="@+id/btnDemoKeyframe"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/demo_keyframe"/>

</LinearLayout>
